<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#3A2C3A"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/collapseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Свернуть" />

        <TextView
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить новую задачу"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

        <EditText
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Введите описание задачи"
        android:textColor="@android:color/white"
        android:textColorHint="#B0B0B0"
        android:padding="12dp"
        android:inputType="text" />

        <Button
            android:id="@+id/pickDateButton"
            android:layout_width="wrap_content"
     android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Выбрать дату"
        android:backgroundTint="#FF4081"
        android:textColor="@android:color/white" />

        <Button
            android:id="@+id/pickTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     android:layout_marginTop="8dp"
        android:text="Выбрать время"
        android:backgroundTint="#FF4081"
        android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/reminderTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Добавить напоминание"
            android:textColor="#B0B0B0"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/addTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="end"
        android:text="Добавить"
        android:backgroundTint="#FF4081"
        android:textColor="@android:color/white"
        android:paddingHorizontal="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>